---
const footerItems = [
  {name: "About", href: "Nosotros"},
  {name: "Premium", href: "#"},
  {name: "Campaigns", href: "#"},
  {name: "Blog", href: "#"},
  {name: "Affiliate Program", href: "#"},
];

import Image from "astro/components/Image.astro";
---

<footer class="bg-white p-4 lg:p-6">
  <div class="mx-auto max-w-screen-xl text-center">
    <Image
      src="/Logo.svg"
      alt="Footer-Logo"
      class="mx-auto w-6 h-w-6"
      width={24}
      height={24}
      loading="lazy"
    />
    <a
      href="/"
      class="flex justify-center items-center text-2xl font-semibold text-gray-900 mb-2.5">
      Hyper<span class="font-light">ton</span>
    </a>
    <!-- <p class="my-6 text-purple-400">
      Hyperon es una plataforma de venta de videojuegos en línea.
    </p> -->
    <ul
      class="flex flex-wrap justify-center items-center mb-6 text-purple-900 space-x-4">
      {
        footerItems.map((item) => (
          <li>
            <a
              href={item.href}
              class="block lg:inline text-purple-600 hover:text-purple-800 hover:font-medium transition-colors duration-300">
              {item.name}
            </a>
          </li>
        ))
      }
    </ul>
    <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400"
      >© 2023-2025 <a href="/" class="hover:underline">Hyperton™</a>. All
      Rights Reserved.</span
    >
  </div>
</footer>
